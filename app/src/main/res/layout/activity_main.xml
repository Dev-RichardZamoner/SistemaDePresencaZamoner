<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Marcenaria Zamoner"
        android:textSize="30sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCompanyName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Data e Hora"
        android:textSize="25sp"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDateTime"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btnNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="🙋 Por Nome"
            android:textSize="18sp"
            android:padding="20dp" />

        <Button
            android:id="@+id/btnConsultarPontos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="🔎 Pontos"
            android:textSize="18sp"
            android:padding="20dp" />

        <Button
            android:id="@+id/btnEntregaEPI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="⛑️ Entrega de EPI"
            android:textSize="18sp"
            android:padding="20dp" />

        <Button
            android:id="@+id/btnOutrasOpcoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="🔒 Outras Opções"
            android:textSize="18sp"
            android:padding="20dp" />

        <Button
            android:id="@+id/btnAdministracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="⚙️ Administração"
            android:textSize="18sp"
            android:padding="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Desenvolvido por Richard Zamoner"
        android:textSize="14sp"
        android:textColor="#FFFFFF" />
</RelativeLayout>